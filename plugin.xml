<?xml version="1.0" encoding="utf-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
        id="com.commontime.cordova.duktape"
        version="0.0.1">

	<name>Duktape Plugin</name>
	
	<engines>
		<engine name="cordova" version=">=4.1.1"/>
	</engines>

	<platform name="android">		

		<framework src="com.squareup.duktape:duktape-android:0.9.5" />
			
		<config-file target="res/xml/config.xml" parent="/*">
			<feature name="Duktape">
				<param name="onload" value="true" />
				<param name="android-package" value="com.commontime.cordova.plugins.duktape.Duktape"/>
			</feature>
		</config-file>		
		
		<source-file src="src/android/com/commontime/cordova/plugins/duktape/Duktape.java" target-dir="src/com/commontime/cordova/plugins/duktape/"/>		
		
	</platform>
  
</plugin>
